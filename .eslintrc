{
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "node/exports-style": [
      "error",
      "module.exports"
    ]
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "semi": [2, "never"],
    "no-param-reassign": 0
  }
}
